	public static function checkLawyerRegCodeValid($regCode){
	    if(preg_match("/[^\d-., ]/",$regCode))
	    {
	    	//不是数字
	    	throw new WeException(20238);
	    	
	    }
	    //是数字
	    $year = substr($regCode, 5,4);
	    $nowYear = date('Y',time());
	    $nowYear=intval($nowYear);
	    if($nowYear - $year + 1 <= 3)
	    {
	        //年份不到
	        throw new WeException(20239);
	    }

	    
	}
	

	
	
